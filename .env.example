
# Copy this file to .env and fill in values (do NOT commit .env)

# Telegram
TELEGRAM_BOT_TOKEN=

# API (if used)
API_URL=
API_TOKEN=

# BadVin (required for hidden vehicle photos)
BADVIN_EMAIL=
BADVIN_PASSWORD=

# BadVin tuning
# - BADVIN_MEDIA_LIMIT controls how many photos we try to send as bytes (Telegram uses it; WhatsApp still caps to 10)
# - BADVIN_URL_LIMIT controls how many photo URLs we keep when falling back to URL mode
BADVIN_MEDIA_LIMIT=30
BADVIN_URL_LIMIT=30

# UltraMsg WhatsApp
ULTRAMSG_INSTANCE_ID=
ULTRAMSG_TOKEN=
ULTRAMSG_BASE_URL=https://api.ultramsg.com

# Optional tuning
BADVIN_REQUEST_TIMEOUT=20
BADVIN_HTTP_RETRIES=3
BADVIN_HTTP_BACKOFF=0.5
ULTRAMSG_TIMEOUT=25
